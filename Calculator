/******************************************************************************

Do calculate program again, now using calculate function. 
Allowing subtraction, division, multiplication, addition.

Thursday 10 November 2022

*******************************************************************************/
#include <iostream>

using namespace std;

int addition();
int subtraction();
int multiplication();
int division();
int number;
int wannaStart = 1;

int main()
{
    
    do
    {
        do
        {
            cout << "Choose the operator \n";
            cout << "1. Addition\n";
            cout << "2. Subtraction\n";
            cout << "3. Multiplication\n";
            cout << "4. Division\n";
            cout << endl;
            cin >> number;
        }
        while (number < 1 || number > 4);
         
        
    
        if (number == 1)
        {
            addition();
        }
        else if (number == 2)
        {
            subtraction();
        }
        else if (number == 3)
        {
            multiplication();
        }
        else if (number == 4)
        {
            division();
        }
    
        cout << endl;
        cout << "Do you want to continue? Enter 1, if not 0 : ";
        cin >> wannaStart;
    }
    while (wannaStart == 1);
    
    return 0;
}

int addition()
{
    int num1, num2;
    float total;
    
    cout << endl;
    cout << "Enter first number : ";
    cin >> num1;
    
    cout << "Enter second number : ";
    cin >> num2;
    
    total = num1 + num2;
    cout << "Total : " << total;
    cout << endl;
    
    return 0;
}


int subtraction()
{
    int num1, num2;
    float total;
    
    cout << endl;
    cout << "Enter first number : ";
    cin >> num1;
    
    cout << "Enter second number : ";
    cin >> num2;
    
    total = num1 - num2;
    cout << "Total : " << total;
    cout << endl;
    
    return 0;
}


int multiplication()
{
    int num1, num2;
    float total;
    
    cout << endl;
    cout << "Enter first number: ";
    cin >> num1;
    
    cout << "Enter second number: ";
    cin >> num2;
    
    total = num1 * num2;
    cout << "Total : " << total;
    cout << endl;
    
    return 0;
}


int division()
{
    int num1, num2;
    float total;
    
    cout << endl;
    cout << "Enter first number: ";
    cin >> num1;
    
    cout << "Enter second number: ";
    cin >> num2;
    
    total = num1 / num2;
    cout << "Total : " << total;
    cout << endl;
    
    return 0;
}
